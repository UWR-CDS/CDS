            var line = $(".line");
            // Set Angle
            $(line).css('transform', 'rotate(' + (parseInt(angle) - parseInt(2)) + 'deg)');

            // Set Width
            $(line).css('width', (parseInt(distance) - parseInt(109)) + 'px');

            // Set Position
            $(line).css('position', 'absolute');
            if(pointB.left < pointA.left) {
                $(line).offset({top: pointA.top + pointAcenterY - 9, left: pointB.left + pointBcenterX - 2});
            } else {
                $(line).offset({top: pointA.top + pointAcenterY - 9, left: pointA.left + pointAcenterX - 2});
            }
        }

