<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
</head>
<body class="hold-transition skin-blue sidebar-mini">
    <input type="hidden" value="@SessionManager.Current.UserID" id="currentUser" />
    <!-- Left side column. contains the logo and sidebar -->
    <aside class="main-sidebar left-bar-tiny">
        <section class="sidebar">
            <!--tabs-sidebar-->
            <div class="tabs-left">
                <ul class="nav nav-tabs">
                    <li>
                        <a href="#chat" data-toggle="tab">
                            <span class="sidebar-toggle" data-toggle="push-menu">
                                <span class="glyphicon glyphicon-comment"></span>
                            </span>
                        </a>
                    </li>
                </ul>
                <div class="tab-content">
                    <div class="tab-pane" id="chat" style="height:680px; overflow:hidden;">
                        <h3>Discussion panel</h3>

                        @*<input id="tagcomment" type="text" class="form-control mention" />*@
                        <div id="commentLoader" style="position: absolute;z-index: 1200;background: rgba(115, 115, 115,0.5);top: 31px;width: 100%;height: 100vh;display:none">
                            <img src="../img/icon.gif" style="margin-top: 210px;margin-left: 25%;">
                        </div>
                        <div id="dvMsgHolder" class=user-chat>
                            @if (Model.lstComments != null)
                            {
                                foreach (var item in Model.lstComments)
                                {
                                    UnreadCount = item.ReceiverUnreadCount;

                                    if (SessionManager.Current.UserID == item.UserID_A)
                                    {
                                        <div id="cmnt_@item.Message_ID" class="chat-box">
                                            <p class="user-label">
                                                @item.FirstName  @item.LastName
                                            </p>
                                            @if (item.isRead)
                                            {
                                                <div id="cmntBody_@item.Message_ID" onclick="ShowComment(@item.textID,@item.sectionID,@item.Message_ID)" class="arrow_box_left">
                                                    @Html.Raw(System.Web.HttpUtility.HtmlDecode(item.Comment))
                                                </div>
                                            }
                                            else
                                            {
                                                <div style="background-color:#d4dffd" id="cmntBody_@item.Message_ID" onclick="ShowComment(@item.textID,@item.sectionID,@item.Message_ID)" class="arrow_box_left">
                                                    @Html.Raw(System.Web.HttpUtility.HtmlDecode(item.Comment))
                                                </div>

                                            }
                                            <p class="time-msg">
                                                @item.CommentTimeAgo
                                            </p>
                                        </div>
                                    }
                                    else
                                    {
                                        <div id="cmnt_@item.Message_ID" class="chat-box chat-right">
                                            <p class="user-label">
                                                @item.FirstName  @item.LastName
                                            </p>
                                            @if (item.isRead)
                                            {
                                                <div id="cmntBody_@item.Message_ID" onclick="ShowComment(@item.textID,@item.sectionID)" class="arrow_box_right">
                                                    @Html.Raw(System.Web.HttpUtility.HtmlDecode(item.Comment))
                                                </div>
                                            }
