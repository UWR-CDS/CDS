@using CDS.Logic
@using LEAF_Logic
@model CDS.Models.LessonInfo
@{
    ViewBag.Title = "LessonPlanEnglish";
    Layout = "~/Views/Shared/_CDSLayout.cshtml";
    int UnreadCount = 0;
    List<int> UnreadMessageID = new List<int>();
    <section id="pagescripts">
        <link href="~/Content/jquery-ui.css" rel="stylesheet" />
        <link href="~/Content/watchbootstrap.min.css" rel="stylesheet" />
