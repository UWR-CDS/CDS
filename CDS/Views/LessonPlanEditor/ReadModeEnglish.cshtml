                                            {
                                                UnreadMessageID.Add(@item.Message_ID);
                                                <div style="background-color:#d4dffd" id="cmntBody_@item.Message_ID" onclick="ShowComment(@item.textID,@item.sectionID)" class="arrow_box_right">
                                                    @Html.Raw(System.Web.HttpUtility.HtmlDecode(item.Comment))
                                                </div>
