<section id="comment">
    <script>
        function ShowComment(id,secId,cmntId)
        {
            return false;
        }
        function IsAlphaNumeric(e)
        {
            if (e.keyCode == 13)
            {
                var comment=$("#txtcomment").val();
                if(comment!=""){
                    SendMassge();
                }else{
                    event.preventDefault();
                }
            }

            return true;
        }
        var globalUserId = @SessionManager.Current.UserID
        function SendMassge()
        {

            var ids = '';
            var emails = '';

            var userid = globalUserId;
            var comment = $('#txtcomment').val();
            if(comment == '')
            {
                alert("Message field can't be empty");
                return false;
            }
            var bktypeId= 1;
            var cmnt1=comment. replace(/\[/g, "<b>");
            var cmnt2=cmnt1.replace(/\]/g,"</b>");

            if (comment != 0)
            {
                $("#commentLoader").show();
                $.ajax({
                    url: '../Comment/AddComment',
                    type: "POST",
                    dataType: "JSON",
                    data: { LessonID: LessonID , userid: userid , Comment: cmnt2 ,BookTypeID:bktypeId,LessonPlanID: lessonplanidint,OwnerID:OwnerID },
                    success: function (data) {
                        fill_MsgHeader();
                        $('#txtcomment').val('');
                    }
                }).done(function (response){
                    $("#commentLoader").hide();
                });
            }
        }

        function fill_MsgHeader()
        {

            var html = '';
            var ShowArchive = 0;
            $('#dvMsgHolder').html('');
            $.ajax({
                async:false,
                url:'../LessonPlanEditor/Get_Msg',
                type:'POST',
                datatype:'Json',
                data:{LessonID:LessonID,BookTypeId :1, ShowArchive: ShowArchive,isSorted:true,LessonPlanID:lessonplanidint },
                success:function(data)
                {
                    if(data != "-1")
                    {
                        $.each(data,function(i,ele){

                            if(globalUserId == ele.UserID_A)
                            {
                                html +=  '<div id="cmnt_'+ele.Message_ID+'" class="chat-box"> <p class="user-label">'+ele.FirstName +' '+ ele.LastName+'</p>';
                                html +=  '<div id="cmntBody_'+ele.Message_ID+'" class="arrow_box_left" onclick="ShowComment('+ele.textID+','+ele.sectionID+','+ele.Message_ID+')">'+ele.Comment +'</div>';
                                html +=  '<p class="time-msg">'+ele.CommentTimeAgo +'</p></div>';
                            }
                            else{
                                html +=  '<div id="cmnt_'+ele.Message_ID+'" class="chat-box chat-right"> <p class="user-label">'+ele.FirstName +' '+ ele.LastName+'</p>';
