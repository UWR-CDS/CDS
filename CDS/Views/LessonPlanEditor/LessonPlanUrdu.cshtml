                $("#templtinfo").css("right", "-51%");
            }
            if (id!=0) {
                $.ajax({
                    url:'../LessonPlanEditor/GetTemplateDataByID',
                    type: 'POST',
                    data: { "ID": id, "LessonID": LessonID},
                    success: function (result)
                    {
                        if(result!=null)
                        {
                            if (result.obj.lstSection!=null)
                            {
                                var html="";
                                for (var i = 0; i < result.obj.lstSection.length; i++)
                                {
                                    html+='<span class="title-editor mainTxt17">';
                                    html+='<span>'+result.obj.lstSection[i].Name+'</span>';
                                    html+='</span>';
                                    html+='<div class="clearfix"></div>';
                                    if (result.obj.lstSubsection != null)
                                    {
                                        for (var j = 0; j < result.obj.lstSubsection.length; j++)
                                        {
                                            if (result.obj.lstSubsection[j].SectionId == result.obj.lstSection[i].Id)
                                            {
                                                if (result.obj.lstSection[i].SubsectionCount!=1)
                                                {
                                                    html+='<span class="sub-section mainTxt17">';
                                                    html+='<span>'+result.obj.lstSubsection[j].SubSectionName+'</span>';
                                                    html+='</span>';
                                                    html+='<div class="clearfix"></div>';
                                                }
                                                html+='<div class="subsectiondata" style="padding:0px 30px 0px 30px !important">';
                                                html+=result.obj.lstSubsection[j].LessonPlanScript;
                                                html+='</div>';
                                                html+='<div class="clearfix"></div>';
                                            }
                                        }
                                    }
                                }
                                $("#templbody").append(html);
                            }
                        }
                    },
                });
            }
        }
