                theme_advanced_toolbar_location: "top",
                theme_advanced_toolbar_align: "left",
                theme_advanced_statusbar_location: "bottom",
                theme_advanced_path : false,
                paste_data_images: true,

                cleanup_on_startup : true,
                content_css : "../Content/TinyMceCustom.css",
                browser_spellcheck : true,
                noneditable_leave_contenteditable : true,
                setup: function (ed)
                {
                    ed.onClick.add(function(ed, e) {
                        if (e.target.nodeName.toLowerCase() == 'img')
                        {
                            if (e.target.id.indexOf("imagereq_") !=-1) {
                                var a=e.target.id.replace("imagereq_","");
                                GetReqID(a);
                            }
                        }
                    });
                    ed.addButton('showkeyboard',
                        {
                            title: 'Keyboard',
                            image: '../Scripts/tinymce/plugins/Jsvk/img/jsvk.gif',
                            onclick: function () {
                                ShowHideKeyboard();
                            }
                        });
                    ed.addButton('savescript',
                        {
                            title: 'Save',
                            onclick: function ()
                            {
                                isautosave=false;
                                SaveHtml();
                            }
                        });
                    ed.onInit.add(function (ed)
                    {
                        tinyMCE.activeEditor.buttons.Jsvk.onclick();
                        ed.getBody().style.fontSize = '17px';
                        var ifrid=id+"_ifr";
                        resizeIframe(ifrid,"load");
                        var txt=tinyMCE.activeEditor.getContent();
                        if (txt==null || txt =="") {
                            tinyMCE.activeEditor.focus();
                            tinyMCE.activeEditor.selection.select(tinyMCE.activeEditor.getBody(), true);
                            tinyMCE.activeEditor.selection.collapse(false);
                        }
                        $(ed.getBody()).on("mouseleave", function()
                        {
                            isautosave=false;
                            SaveHtml();
                        });
                        ed.onRemove.add(function(ed) {
                            tinyMCE.activeEditor.buttons.Jsvk.onclick();
                        });
                    });

                },
            });
        }
        function resizeIframe(id,con)
        {
            var obj=document.getElementById(id);
            if (con=="load")
            {
                var a=id.replace("_ifr","");
                a=a+"_toolbargroup";
                $("#"+a).css({"position": "absolute !important", "top": "   % !important"});
                $("#"+a).addClass("ifr_position");
                obj.style.height = obj.contentWindow.document.body.scrollHeight + 'px';
            }
        }
        function SaveHtml()
        {
            if (isimportclick==true)
            {
                return false;
            }
            if(buttonclickdivid!=0)
            {
                if(typeof(tinyMCE) != "undefined" && tinyMCE.activeEditor != null)
                {
                    var html="";
                    try
                    {
                        html=tinyMCE.activeEditor.getContent();
                        if (html.indexOf("jquery-ui.css") !=-1 || html.indexOf("jquery-2.2.3") !=-1
                            || html.indexOf("TinyMceCustom") !=-1 || html.indexOf("adminlte") !=-1
                            || html.indexOf("Admincds") !=-1 || html.indexOf("sidebar-main") !=-1
                            || html.indexOf("nav sidebar-nav") !=-1 || html.indexOf("btn-icon") !=-1)
                        {
                            return false;
                        }
                        if (isautosave==true && (html==null || html=="" || html==undefined))
                        {
                            isautosave=false;
                            return false;
                        }
                    }
                    catch (ex)
                    {

                    }
                    if (isautosave==true) {
                        ManageTime();
                    }
                    var id=buttonclickdivid.replace("txt_", " ");
                    id=id.trim();
                    $.ajax({
                        url: '../LessonPlanEditor/SaveData',
                        type: "POST",
                        dataType: "json",
                        data: { LessonPlanScriptId:id, Data: html,trackid:trackingid,LessonPlanID:lessonplanid },
                        success: function (data)
                        {
                            if (data != null)
                            {
                                if (data=="Login")
