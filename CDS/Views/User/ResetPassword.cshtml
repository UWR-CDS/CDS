@model CDS.Models.ResetPasswordModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>

    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Reset Password</title>
    <link rel="shortcut icon" href="~/images/favicon5.png" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/logincds.css" rel="stylesheet" />
    <link href="~/Content/font-awesome.css" rel="stylesheet" />
    <link href="~/Content/checkbox-cds.css" rel="stylesheet" />
    <link href="~/Content/responsivecds.css" rel="stylesheet" />
</head>
<body>
    <div class="login-box">
        <div class="form-holder">

            @using (Html.BeginForm("ResetPassword", "User", FormMethod.Post, new { role = "form", @id = "loginForm" }))
            {
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="logo-cds" style="padding-bottom:50px">
                    <img src="~/images/logo-cds.png" />
                </div>

                <form>
                    <p class="login-title">Reset password</p>
                    <div class="user-email">
                        @Html.TextBoxFor(m => m.Email, new { @type = "Email", @class = "form-control", @readonly = "readonly", required = "required", PlaceHolder = "Email" })
                        <span class="icon-login">
                            <img src="~/images/user.png" alt="icon" />
                        </span>
                    </div>
                    <div class="user-pwd">
                        @Html.PasswordFor(m => m.Password, new { @type = "Password", @class = "form-control", required = "required", PlaceHolder = "Enter Password" })
                        <span class="icon-login">
                            <img src="~/images/lock.png" alt="icon" />
                        </span>
                    </div>
                    <div class="user-pwd">
                        @Html.PasswordFor(m => m.ConfirmPassword, new { @type = "Password", @class = "form-control", required = "required", PlaceHolder = "Confirm Password" })
                        <span class="icon-login">
                            <img src="~/images/lock.png" alt="icon" />
                        </span>
                    </div>
                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12" style="margin-top:-20px">
                        <div class="col-lg-6 col-md-6 col-sm-12 btn-login">
                            <button type="submit">Submit</button>
                        </div>
                        <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12 btn-login">
                            <button type="button" onclick="window.open('../User/LoginUser','_self')">Login</button>
                        </div>

                    </div>

                </form>
            }
            <div class="shdow-img"></div>
        </div>
        <div class="copyright-login">
            <p>Incoporation with UnitedWeReach. 2017 </p>
        </div>
    </div>


</body>
</html>
<script src="~/Scripts/jquery-2.2.3.js"></script>